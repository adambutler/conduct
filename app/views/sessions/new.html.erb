<div class="login form-centered">
  <h1>Log in</h1>

  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag 'user[email]', params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag 'user[password]' %>
    </div>
    <div class="actions"><%= submit_tag "Log in", :class => "btn-primary" %></div>
  <% end %>

  <hr/>

  <a href="/forgot">Forgotten password?</a>
</div>
